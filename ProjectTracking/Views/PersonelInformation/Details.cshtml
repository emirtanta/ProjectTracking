@model ProjectTracking.Models.Entities.PersonnelInformation
@{
    ViewBag.Title = "Personel Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">
            <h5 class="card-header">@ViewBag.Title</h5>

            <hr class="my-0">
            <div class="card-body">
                <form id="formAccountSettings" method="post" onsubmit="return false">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="firstName" class="form-label">AD: </label>
                            @Html.DisplayFor(model => model.Name)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="firstName" class="form-label">SOYAD: </label>
                            @Html.DisplayFor(model => model.Surname)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> DEPARTMAN:</label>
                            @Html.DisplayFor(model => model.Department)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> GÖREV:</label>
                            @Html.DisplayFor(model => model.Task)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">E-POSTA:</label>
                            @Html.DisplayFor(model => model.Email)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> TELEFON:</label>
                            @Html.DisplayFor(model => model.Phone)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YETKİ:</label>
                            @Html.DisplayFor(model => model.Authority)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> TC NO:</label>
                            @Html.DisplayFor(model => model.IdentityNumber)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> DOĞUM TARİHİ:</label>
                            @Html.DisplayFor(model => model.Birthdate)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> ADRES:</label>
                            @Html.DisplayFor(model => model.Address)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> İŞE GİRİŞ TARİHİ:</label>
                            @Html.DisplayFor(model => model.Hiredate)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> MEDENİ DURUM:</label>
                            @Html.DisplayFor(model => model.CivilStatus)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> GÖREV AÇIKLAMASI:</label>
                            @Html.DisplayFor(model => model.Description)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YAKIN BİLGİSİ:</label>
                            @Html.DisplayFor(model => model.IntimateKnowledge)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YAKIN AD SOYAD:</label>
                            @Html.DisplayFor(model => model.RelativeName)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YAKIN AD SOYAD:</label>
                            @Html.DisplayFor(model => model.RelativeSurname)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YAKIN TC:</label>
                            @Html.DisplayFor(model => model.RelativeIdentityNumber)
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label"> YAKIN TEL:</label>
                            @Html.DisplayFor(model => model.RelativePhone)
                        </div>

                    </div>
                    <div class="mt-2">
                        <a href="/PersonelInformation/Index/" type="submit" class="btn btn-primary me-2">Anasayfaya Dön</a>

                    </div>
                </form>
            </div>
            <!-- /Account -->
        </div>

    </div>
</div>

