@model IEnumerable<ProjectTracking.Models.Entities.PersonnelInformation>
@{
    ViewBag.Title = "Personel Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>
<div class="card">

    <a href="/PersonelInformation/Create" class="btn btn-outline-info btn-xs">Personel Ekle</a>

    <h5 class="card-header">Personel Listesi</h5>
    <div class="card-body">

        <table id="personellistele" class="table">
            <thead>
                <tr>
                    <th>
                        E-POSTA ADRESİ
                    </th>
                    <th>PERSONEL GÖRSELİ</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdentityNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Task)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>

                    <th>AKSİYON</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="mailto:@item.Email">@item.Email</a>

                        </td>
                        <td><img src="@item.Avatar" style="width:50px; height:50px;" class="rounded-circle" /></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Authority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdentityNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Task)
                        </td>

                        <td>
                            <a href="tel:@item.Phone">@item.Phone</a>

                        </td>

                        <td>
                            <a href="/PersonelInformation/Edit/@item.PersonelInformationId" class="btn btn-outline-info"> <span class="tf-icons bx bx-edit"></span></a>
                            <a href="/PersonelInformation/Details/@item.PersonelInformationId" class="btn btn-outline-warning"><span class="tf-icons bx bx-detail"></span></a>
                            <a href="/PersonelInformation/Delete/@item.PersonelInformationId" class="btn btn-outline-danger" style="position:absolute"><span class="tf-icons bx bx-trash"></span></a>
                            @*<a href="/PersonelBilgileris/HareketFöyü/@item.PersonelBilgileriId" class="btn btn-warning"><span class="tf-icons bx bx-history"></span></a>*@

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </tbody>



        </table>
    </div>
</div>


<script>
    $('#personellistele').DataTable({
        language: {
            info: "_TOTAL_ kayıttan _START_ - _END_ kayıt gösteriliyor.",
            infoEmpty: "Gösterilecek hiç kayıt yok.",
            loadingRecords: "Kayıtlar yükleniyor.",
            zeroRecords: "Tablo boş",
            search: "Arama:",
            infoFiltered: "(toplam _MAX_ kayıttan filtrelenenler)",
            buttons: {
                copyTitle: "Panoya kopyalandı.",
                copySuccess: "Panoya %d satır kopyalandı",
                copy: "Kopyala",
                print: "Yazdır",
            },

            paginate: {
                first: "İlk",
                previous: "Önceki",
                next: "Sonraki",
                last: "Son"
            },
        },
        dom: 'Bfrtip',
        buttons: [
            'copy', 'excel', 'pdf', 'print'
        ],
        responsive: true
    });
</script>

